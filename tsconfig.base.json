{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portfolio/auth-data-access": ["modules/auth/data-access/src/index.ts"],
      "@portfolio/auth-feature": ["modules/auth/feature/src/index.ts"],
      "@portfolio/auth-ui": ["modules/auth/ui/src/index.ts"],
      "@portfolio/contacts-feature": ["modules/contacts/feature/src/index.ts"],
      "@portfolio/contacts-ui": ["modules/contacts/ui/src/index.ts"],
      "@portfolio/welcome-data-access": [
        "modules/welcome/data-access/src/index.ts"
      ],
      "@portfolio/welcome-feature": ["modules/welcome/feature/src/index.ts"],
      "@portfolio/welcome-ui": ["modules/welcome/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
